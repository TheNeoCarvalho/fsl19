<%- include('partials/header')%>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <p class="lead display-4">Vagas</p>
      <% categorias.forEach( categoria => { %>
      <blockquote class="blockquote">
        <p class="mb-0">
          <%- categoria.categoria %>
        </p>
        <% categoria.vagas.forEach(vaga => { %>
        <footer class="blockquote-footer">
          <a class="text-dark" href="/vagas/<%- vaga.id %>">
            <%- vaga.titulo %>
          </a>
        </footer>
        <% }) %>
      </blockquote>
      <% }) %>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div
              class="card-header"
              style="background-color: #26292c; color: #fff; font-weight: bold"
            >
              Empresas
            </div>
            <div class="card-body">
              <% empresas.forEach(empresa => { %>
              <span style="display: block"
                ><%- empresa.nome %>
                <a class="link" href=""
                  ><i
                    title="Ver mais vagas de <%- empresa.nome%>"
                    class="fas fa-info-circle"
                  ></i></a
              ></span>
              <% }) %>
            </div>
            <div class="card-footer"><a href="#">Ver todas</a></div>
          </div>
        </div>
      </div>

      <div class="row" style="margin-top: 25px">
        <div class="col-md-12">
          <div class="card">
            <div
              class="card-header"
              style="background-color: #26292c; color: #fff; font-weight: bold"
            >
              Alunos
            </div>
            <div class="card-body">
              <% alunos.forEach(aluno => { %>
              <p class="listAlunos">
                <span class="titulo">
                  <%- aluno.nome %>
                </span>
                <span>
                  Curso: <%- aluno.curso %>
                </span>
                <a
                  title="Visualizar perfil completo de <%- aluno.nome%>"
                  class="link"
                  href="#"
                  ><i class="fas fa-eye"></i> Ver Perfil</a
                >
              </p>
              <% }) %>
            </div>
            <div class="card-footer">
              <a href="#">Ver todos</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
