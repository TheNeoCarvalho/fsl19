<%- include('header')%>

<div class="container">
  <form method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Título da vaga</label>
      <input value="<%- vaga.id%>" type="hidden">
      <input value="<%- vaga.titulo%>" type="text" name="titulo" class="form-control" id="exampleInputEmail1"
        aria-describedby="emailHelp" placeholder="Título da vaga">
    </div>
    <div class="form-group">
      <label for="exampleFormControlSelect2">Categoria</label>
      <select name="categoria" multiple class="form-control" id="exampleFormControlSelect2">
        <option value="<%- vaga.id %>" selected>
          <%- categoria.categoria %>
        </option>
      </select>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Descrição da Vaga</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" name="descricao" rows="3"><%- vaga.descricao%>
      </textarea>
    </div>
    <button class="btn btn-dark mb-2">Salvar Vaga</button>
  </form>
</div>

<%- include('footer')%>